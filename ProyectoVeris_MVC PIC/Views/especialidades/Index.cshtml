@model IEnumerable<ClinicaMVC.Models.especialidades>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eventos</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Descripcion
            </th>
            <th>
                Dia del Evento
            </th>
            <th>
                Hora Inicio
            </th>
            <th>
                Hora Fin
            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dias)
                </td>
                <td>
                    @if (item.Franja_HI < new TimeSpan(7, 0, 0) || item.Franja_HI > new TimeSpan(11, 59, 0))
                    {
                        var a = item.Franja_HI;
                        <text>@a</text>
                        <text> PM</text>
                    }
                    else
                    {
                        var b = item.Franja_HI;
                        <text>@b</text>
                        <text> AM</text>
                    }
                </td>
                <td>
                    @if (item.Franja_HF < new TimeSpan(7, 0, 0) || item.Franja_HF > new TimeSpan(11, 59, 0))
                    {
                        var a = item.Franja_HF;
                        <text>@a</text>
                        <text> PM</text>
                    }
                    else
                    {
                        var b = item.Franja_HF;
                        <text>@b</text>
                        <text> AM</text>
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdEspecialidad }, new { @class = "btn btn-outline-info btn-xs glyphicon glyphicon-pencil" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IdEspecialidad }, new { @class = "btn btn-outline-success btn-xs glyphicon glyphicon-list-alt" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdEspecialidad }, new { @class = "btn btn-outline-danger btn-xs glyphicon glyphicon-trash" })
                </td>

            </tr>
        }
    </tbody>
</table>
@model IEnumerable<ClinicaMVC.Models.medicos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Coordinador</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>*@
            <th>
                Correo
            </th>
            <th>
                Descripcion
            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                @*<td>
            @Html.DisplayFor(modelItem => item.Foto)
        </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.AspNetUsers.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.especialidades.Descripcion)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdMedico }, new { @class = "btn btn-outline-info btn-xs glyphicon glyphicon-pencil" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IdMedico }, new { @class = "btn btn-outline-success btn-xs glyphicon glyphicon-list-alt" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdMedico }, new { @class = "btn btn-outline-danger btn-xs glyphicon glyphicon-trash" })
                </td>

            </tr>
        }
    </tbody>
</table>

